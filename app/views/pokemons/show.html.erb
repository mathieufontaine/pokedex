
<div class= "container">

  <div class= "d-flex justify-content-between">

    <h1><strong>#</strong><%=@pokemon.id%>. <%= @pokemon.name %></h1>

    <div class= "d-flex align-items-center">
        <% if user_signed_in? && current_user.pokedex.present?%>
         <% if current_user.pokedex.pokemons.include?(@pokemon)%>
           <p class="text-center"><%= link_to "Add #{@pokemon.name} to my Teams", pokemons_path, class: "btn btn-success" %></p>
        <% else %>
          <p class="text-center"><%= link_to "Add #{@pokemon.name} to my PokÃ©dex",trainer_pokedex_pokemon_path(current_user.pokedex.id, @pokemon), method: :post, class: "btn btn-primary" %></p>
        <% end %>
       <%end%>
    </div>

  </div>

<table class="table">
    <tbody>
        <tr>
          <th>Type</th>
            <td><%=@pokemon.type.name%></td>
        </tr>
        <tr>
          <th>Location</th>
            <td><%=@pokemon.location%></td>
        </tr>
        <tr>
          <th>Height</th>
            <td><%=(@pokemon.height)/10%> m </td>
        </tr>
        <tr>
          <th>Weight</th>
            <td><%=(@pokemon.weight)/10%> kg </td>
        </tr>
          <th>Evolution</th>
            <td>Yes</td>
        </tr>
    </tbody>
</table>

<br>
<div>

<% if @pokemon.type.attacks.any? %>

<h3>All <%= @pokemon.type.name.capitalize %> Moves</h3>

  <table class="table">
    <thead class="thead-dark"  id = "sticky-header">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th class ="text-center" scope="col">Power</th>  
        <th class ="text-center" scope="col">Accuracy</th>
        <th class ="text-center" scope="col">PP</th>
      </tr>
    </thead>
      <% @pokemon.type.attacks.each do |attack| %>
        <tr>
          <th scope="row"><%=attack.id%></th>
          <td><%= link_to attack.name, attack_path(attack.id) %></td>
          <td><%=attack.type.name%></td>
          <td class ="text-center"><strong><%=attack.power%></strong></td>
          <td class ="text-center"><%=attack.precision%></td>
          <td class ="text-center"><%=attack.power_point%></td>
        </tr>
      <%end%>
  </table>

<% end %>
</div>

