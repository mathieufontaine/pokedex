<div class="container">
<%= simple_form_for(@pokemon) do |f| %>
  <% if @pokemon.errors.any? %>
  <div class="errors-container">
    <ul>
      <% @pokemon.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>  <div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-inputs">
    <%= f.association :type, :label => "Choose type:" %>
  </div>
  <div class="form-group">
    <%= f.label :Weight %>
    <%= f.text_field :weight, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Height %>
    <%= f.text_field :height, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Location %>
    <%= f.text_field :location, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.input :picture, as: :file, class: 'form-control' %>
  </div>
  <div class="form-actions">
    <%= f.submit  "Add to the Pokedex", class: "btn btn-success" %>
  </div>
  <% end %>
  <%= link_to 'Back', pokemons_path, class: "btn btn-outline-success" %>
</div>

